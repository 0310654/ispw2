<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ispw2.view.gui.controller.HomeOrganizzatoreGUI">

   <!-- Pannello laterale sinistro -->
   <Pane layoutX="0.0" layoutY="0.0" prefHeight="400.0" prefWidth="230.0" style="-fx-background-color: #3F3F37;">
      <children>
         <ImageView fitHeight="54.0" fitWidth="72.0" layoutX="79.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../images/icona_login.png" />
            </image>
         </ImageView>

         <Text fill="#d6d6b1" layoutX="60.0" layoutY="120.0" strokeType="OUTSIDE" strokeWidth="0.0" text="MyEvent">
            <font>
               <Font name="System Bold Italic" size="18.0" />
            </font>
         </Text>

         <Text fill="#d6d6b1" layoutX="11.0" layoutY="28.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Organizzatore">
            <font>
               <Font name="System Bold Italic" size="14.0" />
            </font>
         </Text>

         <Button fx:id="logoutBtn" layoutX="10.0" layoutY="349.0" mnemonicParsing="false" onAction="#logout" prefHeight="31.0" prefWidth="168.0" style="-fx-background-color: #D6D6B1; -fx-background-radius: 5; -fx-text-fill: #000000;" text="Logout" textFill="#0a0a0a" />

      </children>
   </Pane>

   <!-- Pannello contenuto principale -->
   <Pane layoutX="230.0" layoutY="0.0" prefHeight="400.0" prefWidth="370.0" style="-fx-background-color: #D6D6B1;">
      <children>
         <Text fill="#3F3F37" layoutX="100.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Gestisci i tuoi eventi">
            <font>
               <Font name="System Bold" size="24.0" />
            </font>
         </Text>

         <VBox alignment="CENTER" layoutX="50.0" layoutY="70.0" prefHeight="300.0" prefWidth="270.0" spacing="15">
            <ListView fx:id="listaEventi" prefHeight="242.0" prefWidth="270.0" style="-fx-background-color: #3F3F37;" />

            <Button fx:id="aggiungiEventoBtn" mnemonicParsing="false" onAction="#aggiungiEvento" prefHeight="31.0" prefWidth="250.0" style="-fx-background-color: #3F3F37; -fx-text-fill: #d6d6b1; -fx-background-radius: 5;" text="Aggiungi un evento" />
         </VBox>
      </children>
   </Pane>

</AnchorPane>
